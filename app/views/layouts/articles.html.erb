<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
						"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd" >
<html>
<head>
	<title>Aclifirenze</title>
	<%= stylesheet_link_tag "aclifirenze" , :media => "all" %>
	<%= javascript_include_tag :defaults %>
</head>
<body id="article">
	<div id="banner">
		<%= image_tag("http://www.alicubi.it/User/img/logo_acli.gif" ) %>
		<%= @page_title || session[:society] %>
	</div>
	<div id="columns">
		<div id="side">
			<div id="cart">
				<% unless @cart.nil?
					hidden_div_if(@cart.items.empty?, :id=>"cart") do %>
						<%= render(:partial => "cart" , :object => @cart) %>
					<% end
				end %>
			</div>
			<%= @current_time %><br /><br/>
			<a href="http://www....">Home</a><br />
			<a href="http://www..../faq">Questions</a><br />
			<a href="http://www..../news">News</a><br />
			<a href="http://www..../contact">Contact</a><br />
			<% if session[:user_id] %>
			<br/>
			<%= link_to 'Orders', :controller => 'orders' %><br/>
			<%= link_to 'Products', :controller => 'products' %><br/>
			<%= link_to 'Users', :controller => 'users' %> <br/>
			<br/>
			<%= link_to 'Logout', :controller=>:admin, :action=>'logout' %>
			<%end%>
		</div>
		<div id="main">
			<% if flash[:notice] -%>
				<div id="notice"><%= flash[:notice] %></div>
			<% end -%>

			<%= yield :layout %>
		</div>
	</div>
</body>
</html>

